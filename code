                memcpy(&c[14].litros, &p[14].litros, strlen(p[14].litros)+1);
            }if (cod_escolha == 15){
                valor_total = valor_total + p[15].preco * unidades;
                memcpy(&c[15].preco, &p[15].preco, sizeof(p[15].preco)+1);
                memcpy(&c[15].quantidade, &unidades, sizeof(unidades)+1);
                memcpy(&c[15].nome_prod, &p[15].nome_prod, strlen(p[15].nome_prod)+1);
                memcpy(&c[15].marca_prod, &p[15].marca_prod, strlen(p[15].marca_prod)+1);
                memcpy(&c[15].peso, &p[15].peso, strlen(p[15].peso)+1);
                memcpy(&c[15].litros, &p[15].litros, strlen(p[15].litros)+1);
            }if (cod_escolha == 16){
                valor_total = valor_total + p[16].preco * unidades;
                memcpy(&c[16].preco, &p[16].preco, sizeof(p[16].preco)+1);
                memcpy(&c[16].quantidade, &unidades, sizeof(unidades)+1);
                memcpy(&c[16].nome_prod, &p[16].nome_prod, strlen(p[16].nome_prod)+1);
                memcpy(&c[16].marca_prod, &p[16].marca_prod, strlen(p[16].marca_prod)+1);
                memcpy(&c[16].peso, &p[16].peso, strlen(p[16].peso)+1);
                memcpy(&c[16].litros, &p[16].litros, strlen(p[16].litros)+1);
            }if (cod_escolha == 17){
                valor_total = valor_total + p[17].preco * unidades;
                memcpy(&c[17].preco, &p[17].preco, sizeof(p[17].preco)+1);
                memcpy(&c[17].quantidade, &unidades, sizeof(unidades)+1);
                memcpy(&c[17].nome_prod, &p[17].nome_prod, strlen(p[17].nome_prod)+1);
                memcpy(&c[17].marca_prod, &p[17].marca_prod, strlen(p[17].marca_prod)+1);
                memcpy(&c[17].peso, &p[17].peso, strlen(p[17].peso)+1);
                memcpy(&c[17].litros, &p[17].litros, strlen(p[17].litros)+1);
            }if (cod_escolha == 18){
                valor_total = valor_total + p[18].preco * unidades;
                memcpy(&c[18].preco, &p[18].preco, sizeof(p[18].preco)+1);
                memcpy(&c[18].quantidade, &unidades, sizeof(unidades)+1);
                memcpy(&c[18].nome_prod, &p[18].nome_prod, strlen(p[18].nome_prod)+1);
                memcpy(&c[18].marca_prod, &p[18].marca_prod, strlen(p[18].marca_prod)+1);
                memcpy(&c[18].peso, &p[18].peso, strlen(p[18].peso)+1);
                memcpy(&c[18].litros, &p[18].litros, strlen(p[18].litros)+1);
            }if (cod_escolha == 19){
                valor_total = valor_total + p[19].preco * unidades;
                memcpy(&c[19].preco, &p[19].preco, sizeof(p[19].preco)+1);
                memcpy(&c[19].quantidade, &unidades, sizeof(unidades)+1);
                memcpy(&c[19].nome_prod, &p[19].nome_prod, strlen(p[19].nome_prod)+1);
                memcpy(&c[19].marca_prod, &p[19].marca_prod, strlen(p[19].marca_prod)+1);
                memcpy(&c[19].peso, &p[19].peso, strlen(p[19].peso)+1);
                memcpy(&c[19].litros, &p[19].litros, strlen(p[19].litros)+1);
            }if (cod_escolha == 20){
                valor_total = valor_total + p[20].preco * unidades;
                memcpy(&c[20].preco, &p[20].preco, sizeof(p[20].preco)+1);
                memcpy(&c[20].quantidade, &unidades, sizeof(unidades)+1);
                memcpy(&c[20].nome_prod, &p[20].nome_prod, strlen(p[20].nome_prod)+1);
                memcpy(&c[20].marca_prod, &p[20].marca_prod, strlen(p[20].marca_prod)+1);
                memcpy(&c[20].peso, &p[20].peso, strlen(p[20].peso)+1);
                memcpy(&c[20].litros, &p[20].litros, strlen(p[20].litros)+1);
            }
            
            printf("\nEscolha uma opção: \n1 - Voltar para o menu \n2 - Adcionar ao carrinho outro produto da mesma categoria \n3 - Finalizar a compra\n ");
            scanf("%i", &resposta);

            if(resposta == 1){

                system("cls"); //LIMPA A TELA

            }

            if(resposta == 3){
                system("cls"); //LIMPA A TELA
                
                printf("Produtos comprados: ");
                for(int i=0; i<=20; i++){
                    if(c[i].quantidade != 0){
                    printf("\n%s,    R$%.2f,   Qtd: %d", c[i].nome_prod, c[i].preco, c[i].quantidade);
                    }
                }

                printf("\nValor total da compra = R$%.2f\n", valor_total);

                printf("\nQual será a forma de pagamento?\n 1 - À vista \n 2 - Parcelado ");
                scanf("%i", &forma_pagamento);

                if (forma_pagamento == 1 && valor_total > 100){   //desconto de 10% para compras maiores que 100 e pagamento à vista
                    desconto = (valor_total * 10) /100;
                    valor_total = valor_total - desconto;
                    printf("\nO valor com desconto é: R$%.2f", valor_total);
                }


                //printf("\n\nEscolha uma data para retirar a compra em nossa loja: ");
                //scanf("%i", &data_retirada);


            }

        }
        while (resposta == 2);

    }
    while (resposta == 1);


return 0;
}
